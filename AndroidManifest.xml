<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.claroline.mobile.android"
    android:versionCode="24"
    android:versionName="1.6.5" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="app.App"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Claromobile.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="util.UtilDateTimeSerializer,util.UtilResourceListClassSerializer" />

        <activity
            android:name="activity.HomeActivity"
            android:label="@string/app_name"
            android:parentActivityName="activity.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomeActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activity.SearchableActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="activity.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomeActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="activity.CoursActivity"
            android:label="@string/app_name"
            android:parentActivityName="activity.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomeActivity" />
        </activity>

        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value="activity.SearchableActivity" />

        <activity
            android:name="activity.Settings"
            android:label="@string/app_name"
            android:parentActivityName="activity.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomeActivity" />
        </activity>
        <activity
            android:name="activity.DetailsActivity"
            android:label="@string/app_name"
            android:parentActivityName="activity.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomeActivity" />
        </activity>
        <activity
            android:name="activity.UrlBrowserSelectorActivity"
            android:label="@string/app_name"
            android:parentActivityName="activity.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomeActivity" />
        </activity>
    </application>

</manifest>