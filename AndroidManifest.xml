<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.claroline"
    android:versionCode="1"
    android:versionName="1.0" 
    >

    <uses-sdk android:minSdkVersion="14"
        	  android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/logo_claroline"
        android:label="@string/app_name" 
        android:name="app.GlobalApplication">
        
        <activity
            android:name="activity.home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity 
       	    android:name="activity.about_us" 
       	    android:label="@string/app_name">  	    
       	</activity>
       	
        
        <activity android:name="activity.searchableActivity"
            	  android:label="@string/app_name" >
        	<intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
        	</intent-filter>
        	<meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"/>
   		</activity>
   		
        <activity 
       	    android:name="activity.coursActivity" 
       	    android:label="@string/app_name">  	    
       	</activity>
    
        
        <provider android:name="dataStorage.CoursProvider"
            	  android:authorities="dataStorage.CoursProvider" />
        
        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data android:name="android.app.default_searchable"
                   android:value="activity.searchableActivity" />
        <activity android:name="activity.Preference" android:label="@string/app_name"></activity>
        
    </application>

</manifest>